.chat{
    display: flex;
    height: 100vh;
    position: relative;

}
.chat-search{
    display: flex;
    flex-direction: column;
    width: 25%;
    background: #FBFBFB;
    height: 100vh;
    padding-left: 20px;
    padding-right: 20px;

    &__dialogs{
        margin-top: 10px;
        margin-bottom: 10px;
    }
    &__input {
        background-image: url('../../assets/search_icon.png');
        padding-left: 65px;
        background-position: center center;
        background-repeat: no-repeat;
        width: 100%;
        height: 32px;
        border-radius: 5px;
        margin: 0 auto;
        &:focus{
            background-image: none;
            padding-left: 10px;
        }
        &::placeholder{
            text-align: center;
        }
        &:focus::placeholder{
            color: white;
            text-align: left;
        }
    }

}
.chat-search a{
    font-size: 16px;
    /* identical to box height, or 100% */

    text-align: right;
    margin-bottom: 20px;
    margin-top: 20px;
    color: var(--second-text);
}
/*
    DIALOGS MAP
*/

.dialogs-item{
    display: flex;
    align-items: center;
    margin-top: 12px;
    font-size: 13px;
    justify-content: space-between;
    &__ava{
        width: 47px;
        height: 47px;
        margin-right: 10px;
        margin-top: 12px;
        margin-bottom: 12px;
    }
    &__left{
        display: flex;
        align-items: center;
        div{

            width: 60%;
            font-size: 12px;
        }
    }
    &__time{
        color: var(--second-text);
    }
    &__new{
        background: var(--new);;

        width: 20px;
        padding: 2px;
        height: 20px;
        color: white;
        text-align: center;
        border-radius: 50%;
        float: right;
    }
}
/*
    CHAT MAIN
*/
.chat-main{
    position: relative;
    width: 100%;
    padding-left: 20px;
    padding-right: 20px;
    margin-top: 10px;

    &__user{
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 15px;
    }
    &__user > div{
        display: flex;
        align-items: center;
    }
    &__user > div > *{
        margin-right: 10px;
    }
    &__img{
        height: 15px;
        width: 3px;
    }
    &__time{
        display: flex;
        justify-content: center;
        margin-top: 50px;
        color: #999999;
        margin-bottom: 50px;
    }
}
/*
    MESSAGES BLOCK
*/
.chat-messages{
    width: 40%;
    &__text{
        background-color: #F8F8F8;
        border-radius: 10px;
        padding: 11px;
        margin-bottom: 20px;
    }
    &__time{
        font-size: 12px;
        color: #999999;
        float: right;
        margin-top: -11px;
    }
    &__text-photo{
        font-size: 12px;
        color: white;
        border-radius: 30px;
        padding: 0 5px;
        float: right;
        background-color: rgba(82, 82, 82, 0.5);
        margin-top: -25px;
        position: relative;
    }
    &__photo{
        width: 78%;
    }
}

.camera{
    width: 80%;

}
.chat-my{
    background: #E4EDFD;
    padding: 11px;
    float: right;
    border-radius: 30px;
    display: flex;
    align-items: baseline;
    margin-top: 30px;
    &__text{
        padding-right: 20px;
    }
    img{
        height: 4px;
        width: 10px;
    }
    &__time{
        font-size: 12px;
        color: var(--new);
    }
}

.chat-footer{
    position: absolute;
    bottom: 11px;
    left: 20px;
    right: 20px;
    &__wrapper{
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 11px;
    }
    &__hr{
        width: 100%;
        margin-top: 100px;
    }
    input{
        width: 90%;
        background: #EFEFEF;
        border-radius: 30px;
        padding: 10px 20px;
        border: none;
    }
}
